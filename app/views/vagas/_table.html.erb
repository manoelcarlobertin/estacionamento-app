<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Número</th>
        <th>Status</th>
        <th class="text-center">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @vagas.each do |vaga| %>
        <tr>
          <td>
            <%= vaga.numero %>
          </td>
          <td>
            <%= vaga.status %>
          </td>
          <td class="text-center">
            <%= render 'shared/action_buttons' , edit_path: edit_vaga_path(vaga), delete_path:
              vaga_path(vaga) %>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>